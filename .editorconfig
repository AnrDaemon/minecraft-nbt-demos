# http://editorconfig.org
root = true

[*]
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
charset = utf-8

[*.php]
indent_size = 2

# Makefiles always use tabs for indentation
[Makefile]
indent_style = tab

# Batch files use CRLF EOL
[*.{bat,cmd,ps1,btm}]
end_of_line = crlf
